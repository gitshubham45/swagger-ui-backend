{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "Description",
    "version": "1.0.0"
  },
  "host": "swagger-ui-backend-nyfr.vercel.app",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "scheme": "bearer",
      "in": "header"
    }
  },
  "paths": {
    "/": {
      "get": {
        "description": "",
        "summary": "Home",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user/": {
      "info": {
        "title": "Register User",
        "description": "Description"
    },
      "post": {
        "description": "Register user",
        "summary": "Register user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Jane Doe"
                },
                "email": {
                  "example": "any@example.com"
                },
                "password": {
                  "example": "any123"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "User already exists/Failed to create the user/Please Enter all Fields"
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "description": "User Login",
        "summary": "User Login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "any@example.com"
                },
                "password": {
                  "example": "any123"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "logged in successfully"
          },
          "400": {
            "description": "Invalid email or password"
          }
        }
      }
    },
    "/api/publicapi/": {
      "post": {
        "description": "",
        "summary": "Get data from Public API",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "limit": {
                  "example": "number"
                },
                "category": {
                  "example": "Animals/Books/Business/Calender/Cryptocurrency/Finance/Jobs/Music/News..."
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Category not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/secret/": {
      "get": {
        "description": "",
        "summary": "Get Secret message",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}